<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_traffic_detail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
      android:background="#50b5f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_traffic_detail_title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip" >

        <ImageView
            android:id="@+id/iv_traffic_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:paddingBottom="10.0dip"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="10.0dip"
            android:src="@drawable/ic_toleft" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="本月流量单"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:background="@drawable/ic_wifi_top_line" />

    <RelativeLayout
        android:id="@+id/rl_traffic_detail_2g3g"
        android:layout_width="fill_parent"
        android:layout_height="164.0dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#2494c8ff" >

        <TextView
            android:id="@+id/tv_traffic_detail_top"
            android:layout_width="wrap_content"
            android:layout_height="26.0dip"
            android:layout_marginLeft="42.0dip"
            android:gravity="center_vertical"
            android:text="2G/3G流量"
            android:textColor="#ff38f458"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/tv_traffic_detail_y3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="22.0dip"
            android:gravity="top"
            android:singleLine="true"
            android:text="0.30"
            android:textColor="#ffeeeeee"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rl_line"
            android:layout_width="fill_parent"
            android:layout_height="128.0dip"
            android:layout_below="@id/tv_traffic_detail_top"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/bg_bill_show" >

            <TextView
                android:id="@+id/tv_traffic_detail_mb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16.0dip"
                android:singleLine="true"
                android:text="MB"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_y0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="32.0dip"
                android:singleLine="true"
                android:text="0.00"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_y1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="56.0dip"
                android:singleLine="true"
                android:text="0.10"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_y2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="88.0dip"
                android:singleLine="true"
                android:text="0.20"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_x1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="32.0dip"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="01"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="5.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_traffic_detail_day"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="bottom|right|center"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:text="日"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_x2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:singleLine="true"
                android:text="2"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_x3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:singleLine="true"
                android:text="3"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_x4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:singleLine="true"
                android:text="4"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_x5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:singleLine="true"
                android:text="5"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_x6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:singleLine="true"
                android:text="6"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_x7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:singleLine="true"
                android:text="7"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_x8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:singleLine="true"
                android:text="8"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_traffic_detail_x9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:singleLine="true"
                android:text="9"
                android:textColor="#ffeeeeee"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:background="#2494c8ff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/llyt_traffic_detail_head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5.0dip"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5.0dip" >

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="日期"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="2G/3G"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5.0dip"
                android:text="wifi"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/ic_wifi_top_line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00000000" >

            <ListView
                android:id="@+id/lv_traffic_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="0.0dip"
                android:fadingEdge="none"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip" >
            </ListView>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>